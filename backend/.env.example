# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# BitMEX API (Testnet for development)
BITMEX_API_KEY=your-bitmex-api-key
BITMEX_API_SECRET=your-bitmex-api-secret
BITMEX_TESTNET=true

# XAI API
XAI_API_KEY=your-xai-api-key

# Optional: CoinGecko API (free tier available)
COINGECKO_API_KEY=

# Optional: CryptoCompare API (for news)
CRYPTOCOMPARE_API_KEY=

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=your-user-agent
REDDIT_SUBREDDITS=r/CryptoCurrency,r/Bitcoin,r/cryptomarkets

# Telegram API
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
TELEGRAM_CHANNELS=@crypto_channel1,@crypto_channel2